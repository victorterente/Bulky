@page
@model BulkyWebRazor.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div>
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Category</h2>
                <hr />
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Category.Name" class="p-0"></label>
                <input asp-for="Category.Name" disabled type="text" class="form-control" />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Category.DisplayOrder" class="p-0"></label>
                <input asp-for="Category.DisplayOrder" disabled type="number" class="form-control" min="0" />
            </div>
            <div class="row 6">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-page="/categories/Index" class="btn btn-outline-secondary border form-control">Back To List</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        <partial name="_Notification" />

    }
}
