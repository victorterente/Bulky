@page
@model BulkyWebRazor.Pages.Categories.IndexModel
<div class="container">
    <div class=" row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>

        </div>
        <div class=" col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Create Category

            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>

                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.CategoryList.Any())
            {
                foreach (var obj in Model.CategoryList.OrderBy(o => o.DisplayOrder))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                        </a>
                                <a asp-page="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash3"></i> Delete
                        </a>
                            </div>


                        </td>


                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">No categories available</td>
                </tr>
            }

        </tbody>

    </table>
</div>